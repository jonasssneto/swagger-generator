{
    "swagger": "2.0",
    "info": {
      "title": "Livros API",
      "description": "API para gerenciar livros",
      "version": "1.0.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
      "/livros": {
        "get": {
          "summary": "Lista todos os livros",
          "responses": {
            "200": {
              "description": "Lista de livros",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Livro"
                }
              }
            }
          }
        },
        "post": {
          "summary": "Cria um novo livro",
          "consumes": ["application/json"],
          "parameters": [
            {
              "in": "body",
              "name": "livro",
              "description": "Novo livro",
              "schema": {
                "$ref": "#/definitions/Livro"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Livro criado com sucesso"
            }
          }
        }
      }
    },
    "definitions": {
      "Livro": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "titulo": {
            "type": "string",
            "example": "O Senhor dos An√©is"
          },
          "autor": {
            "type": "string",
            "example": "J.R.R. Tolkien"
          }
        },
        "required": ["id", "titulo", "autor"]
      }
    }
  }